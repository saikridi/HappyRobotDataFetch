{
  "test_requests": {
    "root_endpoint": {
      "method": "GET",
      "url": "https://your-api-url.run.app/",
      "description": "Test the root endpoint"
    },
    "get_loads_valid": {
      "method": "POST",
      "url": "https://your-api-url.run.app/getLoads",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "load_id": 1
      },
      "description": "Get carrier data for load_id 1"
    },
    "get_loads_another": {
      "method": "POST", 
      "url": "https://your-api-url.run.app/getLoads",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "load_id": 2
      },
      "description": "Get carrier data for load_id 2"
    },
    "get_loads_invalid": {
      "method": "POST",
      "url": "https://your-api-url.run.app/getLoads", 
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "load_id": 99999
      },
      "description": "Test with invalid load_id (should return 404)"
    }
  },
  "curl_commands": {
    "root": "curl -X GET 'https://your-api-url.run.app/'",
    "get_loads_1": "curl -X POST 'https://your-api-url.run.app/getLoads' -H 'Content-Type: application/json' -d '{\"load_id\": 1}'",
    "get_loads_2": "curl -X POST 'https://your-api-url.run.app/getLoads' -H 'Content-Type: application/json' -d '{\"load_id\": 2}'",
    "docs": "curl -X GET 'https://your-api-url.run.app/docs'"
  }
}
